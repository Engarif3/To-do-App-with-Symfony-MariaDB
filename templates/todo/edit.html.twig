{% extends 'base.html.twig' %}

{% block title %}Edit To-Do{% endblock %}

{% block body %}
    <h1 class="text-4xl font-semibold text-center text-gray-800 mb-6">Edit To-Do</h1>

    {{ form_start(form, {'attr': {'class': 'max-w-lg mx-auto space-y-6'}}) }}
        <div>
            {{ form_label(form.title, 'To-Do Title', {'label_attr': {'class': 'block text-lg font-medium text-gray-700'}}) }}
            {{ form_widget(form.title, {'attr': {'class': 'w-full p-3 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500'}}) }}
        </div>

        <div>
            {{ form_label(form.completed, 'Completed?', {'label_attr': {'class': 'block text-lg font-medium text-gray-700'}}) }}
            {{ form_widget(form.completed, {'attr': {'class': 'form-checkbox h-5 w-5 text-blue-600'}}) }}
        </div>

        <button type="submit" class="w-full py-3 bg-yellow-600 text-white rounded-lg hover:bg-yellow-700 focus:outline-none focus:ring-2 focus:ring-yellow-500">Save Changes</button>
    {{ form_end(form) }}

    <div class="mt-6 text-center">
        <a href="{{ path('todo_index') }}" class="text-blue-500 hover:underline">Back to To-Do List</a>
    </div>
{% endblock %}
