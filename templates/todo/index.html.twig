{% extends 'base.html.twig' %}

{% block title %}To-Do List{% endblock %}

{% block body %}
    <h1 class="text-4xl font-semibold text-center text-gray-800 py-8">To-Do List</h1>

    <div class="text-center mb-6">
        <a href="{{ path('todo_new') }}" class="inline-block py-3 px-6 bg-green-600 text-white rounded-lg hover:bg-green-700 focus:outline-none focus:ring-2 focus:ring-green-500">Create New To-Do</a>
    </div>

    <div class="bg-white shadow-md rounded-lg overflow-hidden">
        <ul>
            {% for todo in todos %}
                <li class="flex justify-between items-center p-4 border-b border-gray-200 hover:bg-gray-50">
                    <div class="flex-1">
                        <span class="text-lg font-medium text-gray-800">{{ todo.title }}</span>
                        <span class="block text-sm text-gray-500">
                            {% if todo.completed %}
                                <span class="bg-green-100 text-green-600 py-1 px-3 rounded-full text-xs">Completed</span>
                            {% else %}
                                <span class="bg-yellow-100 text-yellow-600 py-1 px-3 rounded-full text-xs">Pending</span>
                            {% endif %}
                        </span>
                    </div>
                    <div class="flex space-x-4">
                        <a href="{{ path('todo_edit', {'id': todo.id}) }}" class="text-blue-500 hover:underline">Edit</a>
                        <a href="{{ path('todo_delete', {'id': todo.id}) }}" class="text-red-500 hover:underline">Delete</a>
                    </div>
                </li>
            {% endfor %}
        </ul>
    </div>
{% endblock %}
